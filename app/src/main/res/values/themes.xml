<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <!--
    Tema di base dell'applicazione.
    Usa MaterialComponents come genitore per massima stabilità e compatibilità.
    'DayNight' permette la gestione automatica del tema chiaro/scuro,
    ma lo forzeremo su scuro tramite il tema principale.
  -->
  <style name="Base.Theme.ChronoLog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colori primari del brand -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/white</item>
    
    <!-- Colori secondari del brand -->
    <item name="colorSecondary">@color/colorPrimary</item>
    <item name="colorSecondaryVariant">@color/colorPrimary</item>
    <item name="colorOnSecondary">@color/white</item>
    
    <!-- Colore della barra di stato -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
  </style>

  <!-- Tema principale dell'app, che eredita dalla base -->
  <style name="Theme.ChronoLog" parent="Base.Theme.ChronoLog" />

</resources>
